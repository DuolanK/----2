local chestLid = script.Parent -- Крышка сундука
local clickDetector = chestLid:FindFirstChildOfClass("ClickDetector") -- ClickDetector
local pivotPart = chestLid:FindFirstChild("Pivot") -- Пивотная деталь
local rotationSpeed = 30 -- Скорость вращения крышки
local rotationAngle = 90 -- Угол вращения за один клик (в градусах)

-- Если пивотная деталь не указана, используем центр объекта
if not pivotPart then
    pivotPart = chestLid
end

-- Обработчик клика
clickDetector.MouseClick:Connect(function(player)
    -- Поворот крышки вокруг пивотной оси (пивот остаётся на месте)
    local offset = chestLid.Position - pivotPart.Position -- Смещение крышки от пивота
    chestLid.CFrame = CFrame.new(pivotPart.Position) * CFrame.Angles(0, math.rad(rotationAngle), 0) * CFrame.new(offset)
end)
