-- Получаем необходимые объекты
local coin = script.Parent -- монетка
local player = nil -- переменная для игрока, который собрал монетку

-- Ссылка на счет (находим TextLabel в StarterGui)
local gui = game.Players.LocalPlayer:WaitForChild("PlayerGui"):WaitForChild("ScreenGui")
local scoreLabel = gui:WaitForChild("TextLabel")

-- Начальный счет
local score = 0

-- Функция для обновления счета
local function updateScore()
    scoreLabel.Text = "Score: " .. score
end

-- Функция обработки касания
coin.Touched:Connect(function(hit)
    -- Проверяем, касался ли объект персонажа игрока
    local character = hit.Parent
    local player = game.Players:GetPlayerFromCharacter(character)

    if player then
        -- Увеличиваем счет
        score = score + 1
        -- Обновляем текст на экране
        updateScore()
        -- Удаляем монетку с экрана после того, как она собрана
        coin:Destroy()
    end
end)
